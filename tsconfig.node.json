{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "allowJs": true,
    "types": ["node", "vite/client"],
    "target": "es2017",
    "outDir": "dist",
    "strict": true
  },
  "include": [
    "src",
    "scripts",
    "vite.config.ts",
    "vite.config.js"
  ],
  "exclude": [
    "vite.config.js",
    "dist/**/*",
    "public",
    "src/**/*.js",
    "*.js",
    "functions/**/*.js",
    "dataconnect-generated/**/*.js",
    "node_modules"
  ]
}